{
  "name": "lovely-server",
  "version": "3.3.2",
  "repository": "https://github.com/Hibanka/lovely-server",
  "main": ".build/index.js",
  "types": ".build/index.d.ts",
  "files": [
    ".build"
  ],
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "mocha -r ts-node/register 'test/**/*.test.ts'",
    "test:file": "mocha -r ts-node/register --file",
    "prepare": "husky install"
  },
  "dependencies": {
    "fastify": "^3.29.0"
  },
  "devDependencies": {
    "@hibanka/eslint-config": "^3.3.0",
    "@hibanka/prettier-config": "^3.3.0",
    "@hibanka/ts-config": "^3.3.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.35",
    "axios": "^0.27.2",
    "chai": "^4.3.6",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
